{
  "name": "easyrsa",
  "version": "3.0.0-alpha.4",
  "description": "EasyRSA public key infrastructure management",
  "main": "lib/index.js",
  "bin": {
    "easyrsa": "lib/bin/easyrsa.js"
  },
  "scripts": {
    "start": "npm run test:watch",
    "test": "NODE_ENV=test mocha",
    "test:watch": "npm run test -- --watch",
