    "babel-register": "^6.16.3",
    "codeclimate-test-reporter": "^0.4.0",
    "debug-utils": "^0.2.1",
    "eslint": "^3.7.1",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-plugin-import": "^1.16.0",
    "expect": "^1.20.2",
    "mocha": "^3.1.0",
    "nyc": "^8.3.1",
    "rimraf": "^2.5.4"
  },
  "optionalDependencies": {
    "ursa": "^0.9.4"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
